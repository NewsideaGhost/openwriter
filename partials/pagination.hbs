<div class="pagination" role="navigation">
	<small>
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; Latest</a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Earliest &rarr;</a>
    {{/if}}
    </small>
</div>
